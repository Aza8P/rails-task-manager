<div class="container">
  <h1>Edit task</h1>
  <div id="edit">
  <%= form_for(@task) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :details %><br>
    <%= f.text_field :details %><br>
    <%= f.check_box :completed %>
    <%= f.label :completed %><br>
    <%= f.submit %>
  <% end %>
  </div>
</div>
